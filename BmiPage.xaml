<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="testMidterm.BmiPage"
             Title="BmiPage" >
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="BMI calculator" HorizontalOptions="Center" FontSize="20" x:Name="result"/>

        <Entry Placeholder="Height(cm)" x:Name="heightC" />
        <Entry Placeholder="Weight(kg)" x:Name="weightC" />

        <Button Text="Submit" BackgroundColor="Gray" x:Name="btn" Clicked="btn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>