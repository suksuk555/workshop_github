<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="testMidterm.MainPage"
             Title="Home"
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollView Orientation="Horizontal">
            <StackLayout Background="Green" Padding="10" Spacing="10" Orientation="Horizontal">
            <Button BackgroundColor="Gray" 
                    WidthRequest="130" 
                    HeightRequest="60" 
                    Text="Hot"
                    FontSize="25"       
                    />
            <Button BackgroundColor="Gray" 
                    WidthRequest="130" 
                    HeightRequest="60" 
                    Text="News"
                    FontSize="25"       
                    />
            <Button BackgroundColor="Gray" 
                    WidthRequest="130" 
                    HeightRequest="60" 
                    Text="Category"
                 FontSize="25"       
        />
            <Button BackgroundColor="Gray" 
                 WidthRequest="130" 
                 HeightRequest="60" 
                 Text="555"
                 FontSize="25"       
        />



        </StackLayout>
            
        </ScrollView>

        <StackLayout BackgroundColor="Gray" Grid.Row="1" Spacing="10" Padding="10">

            <StackLayout Orientation="Vertical" 
                         BackgroundColor="White" 
                         HeightRequest="170"  
                         Spacing="5"
                         Padding="5"
                         >
                <Label Text="First Game" HorizontalTextAlignment="Center"/>
                <Label Text="It's good" HorizontalTextAlignment="Center"/>

                <HorizontalStackLayout Spacing="30" Padding="5">
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                </HorizontalStackLayout>

            </StackLayout>

            <StackLayout Orientation="Vertical" 
             BackgroundColor="White" 
             HeightRequest="170"  
             Spacing="5"
             Padding="5"
             >
                <Label Text="Second Game" HorizontalTextAlignment="Center"/>
                <Label Text="It's good" HorizontalTextAlignment="Center"/>

                <HorizontalStackLayout Spacing="30" Padding="5">
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                </HorizontalStackLayout>

            </StackLayout>
            <StackLayout Orientation="Vertical" 
             BackgroundColor="White" 
             HeightRequest="170"  
             Spacing="5"
             Padding="5"
             >
                <Label Text="Third Game" HorizontalTextAlignment="Center"/>
                <Label Text="It's good" HorizontalTextAlignment="Center"/>

                <HorizontalStackLayout Spacing="30" Padding="5">
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                    <BoxView   BackgroundColor="Green" WidthRequest="100" HeightRequest="100"/>
                </HorizontalStackLayout>

            </StackLayout>



        </StackLayout>
        
    </Grid>

</ContentPage>
